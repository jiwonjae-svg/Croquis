/* =========================================
   Croquis - Modern SaaS Style (Anthropic Dark Theme)
   Background: #1e1e1e
   Accent: #6d5dfc
   ========================================= */

/* Global Styles */
QWidget {
    background-color: #1e1e1e;
    color: #e0e0e0;
    font-family: "Segoe UI", "SF Pro Display", sans-serif;
    font-size: 13px;
}

QMainWindow, QDialog {
    background-color: #1e1e1e;
}

/* Buttons */
QPushButton {
    background-color: #6d5dfc;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 10px 20px;
    font-weight: 600;
    font-size: 13px;
}

QPushButton:hover {
    background-color: #5b4dd9;
}

QPushButton:pressed {
    background-color: #4a3db3;
}

QPushButton:disabled {
    background-color: #3a3a3a;
    color: #7a7a7a;
}

/* Secondary Buttons */
QPushButton[class="secondary"] {
    background-color: #2d2d2d;
    color: #e0e0e0;
}

QPushButton[class="secondary"]:hover {
    background-color: #3d3d3d;
}

/* Danger Buttons */
QPushButton[class="danger"] {
    background-color: #e63946;
}

QPushButton[class="danger"]:hover {
    background-color: #d62839;
}

/* Input Fields */
QLineEdit, QTextEdit, QPlainTextEdit, QSpinBox, QDoubleSpinBox, QComboBox {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 8px;
    padding: 10px;
    color: #e0e0e0;
    selection-background-color: #6d5dfc;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus, QSpinBox:focus, QDoubleSpinBox:focus {
    border: 1px solid #6d5dfc;
    background-color: #262626;
}

QComboBox {
    padding: 8px 10px;
}

QComboBox::drop-down {
    border: none;
    padding-right: 10px;
}

QComboBox::down-arrow {
    image: url(:/icons/down-arrow.png);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 8px;
    selection-background-color: #6d5dfc;
    padding: 4px;
}

/* Labels */
QLabel {
    background: transparent;
    color: #e0e0e0;
}

QLabel[class="title"] {
    font-size: 24px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 8px;
}

QLabel[class="subtitle"] {
    font-size: 14px;
    color: #a0a0a0;
}

QLabel[class="section-header"] {
    font-size: 16px;
    font-weight: 600;
    color: #ffffff;
    margin-top: 16px;
    margin-bottom: 8px;
}

/* List Widget - Card Style */
QListWidget {
    background-color: #1e1e1e;
    border: none;
    border-radius: 8px;
    padding: 8px;
    outline: none;
}

QListWidget::item {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 12px;
    padding: 16px;
    margin: 6px;
    color: #e0e0e0;
}

QListWidget::item:hover {
    background-color: #353535;
    border-color: #6d5dfc;
}

QListWidget::item:selected {
    background-color: #3d3d4d;
    border-color: #6d5dfc;
    color: white;
}

/* Tree Widget */
QTreeWidget {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 8px;
    padding: 4px;
    outline: none;
}

QTreeWidget::item {
    padding: 8px;
    border-radius: 4px;
}

QTreeWidget::item:hover {
    background-color: #353535;
}

QTreeWidget::item:selected {
    background-color: #6d5dfc;
    color: white;
}

/* Table Widget */
QTableWidget {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 8px;
    gridline-color: #3d3d3d;
    outline: none;
}

QTableWidget::item {
    padding: 8px;
}

QTableWidget::item:selected {
    background-color: #6d5dfc;
    color: white;
}

QHeaderView::section {
    background-color: #262626;
    color: #e0e0e0;
    padding: 10px;
    border: none;
    border-bottom: 2px solid #6d5dfc;
    font-weight: 600;
}

/* Scroll Bars */
QScrollBar:vertical {
    background-color: #1e1e1e;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #4d4d4d;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background-color: #6d5dfc;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #1e1e1e;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #4d4d4d;
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #6d5dfc;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Group Box */
QGroupBox {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 12px;
    margin-top: 16px;
    padding-top: 20px;
    font-weight: 600;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 4px 12px;
    background-color: #6d5dfc;
    color: white;
    border-radius: 6px;
    left: 12px;
}

/* Tab Widget */
QTabWidget::pane {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 8px;
    padding: 8px;
}

QTabBar::tab {
    background-color: #2d2d2d;
    color: #a0a0a0;
    padding: 10px 20px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    margin-right: 4px;
}

QTabBar::tab:hover {
    background-color: #353535;
    color: #e0e0e0;
}

QTabBar::tab:selected {
    background-color: #6d5dfc;
    color: white;
}

/* Progress Bar */
QProgressBar {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 8px;
    text-align: center;
    color: white;
    height: 24px;
}

QProgressBar::chunk {
    background-color: #6d5dfc;
    border-radius: 7px;
}

/* Slider */
QSlider::groove:horizontal {
    background-color: #2d2d2d;
    height: 6px;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background-color: #6d5dfc;
    border: none;
    width: 18px;
    height: 18px;
    margin: -6px 0;
    border-radius: 9px;
}

QSlider::handle:horizontal:hover {
    background-color: #5b4dd9;
}

/* Check Box */
QCheckBox {
    spacing: 8px;
    color: #e0e0e0;
}

QCheckBox::indicator {
    width: 20px;
    height: 20px;
    border-radius: 6px;
    border: 2px solid #3d3d3d;
    background-color: #2d2d2d;
}

QCheckBox::indicator:hover {
    border-color: #6d5dfc;
}

QCheckBox::indicator:checked {
    background-color: #6d5dfc;
    border-color: #6d5dfc;
    image: url(:/icons/check.png);
}

/* Radio Button */
QRadioButton {
    spacing: 8px;
    color: #e0e0e0;
}

QRadioButton::indicator {
    width: 20px;
    height: 20px;
    border-radius: 10px;
    border: 2px solid #3d3d3d;
    background-color: #2d2d2d;
}

QRadioButton::indicator:hover {
    border-color: #6d5dfc;
}

QRadioButton::indicator:checked {
    background-color: #6d5dfc;
    border-color: #6d5dfc;
}

QRadioButton::indicator:checked::before {
    content: "";
    width: 10px;
    height: 10px;
    border-radius: 5px;
    background-color: white;
    position: absolute;
    top: 5px;
    left: 5px;
}

/* Menu Bar */
QMenuBar {
    background-color: #1e1e1e;
    color: #e0e0e0;
    padding: 4px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 8px 16px;
    border-radius: 6px;
}

QMenuBar::item:selected {
    background-color: #2d2d2d;
}

QMenu {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 8px;
    padding: 8px;
}

QMenu::item {
    padding: 8px 24px;
    border-radius: 6px;
}

QMenu::item:selected {
    background-color: #6d5dfc;
    color: white;
}

QMenu::separator {
    height: 1px;
    background-color: #3d3d3d;
    margin: 4px 8px;
}

/* Tool Bar */
QToolBar {
    background-color: #2d2d2d;
    border: none;
    border-bottom: 1px solid #3d3d3d;
    padding: 8px;
    spacing: 8px;
}

QToolButton {
    background-color: transparent;
    color: #e0e0e0;
    border: none;
    border-radius: 8px;
    padding: 8px;
}

QToolButton:hover {
    background-color: #3d3d3d;
}

QToolButton:pressed {
    background-color: #6d5dfc;
}

/* Status Bar */
QStatusBar {
    background-color: #2d2d2d;
    border-top: 1px solid #3d3d3d;
    color: #a0a0a0;
}

/* Tooltip */
QToolTip {
    background-color: #2d2d2d;
    color: #e0e0e0;
    border: 1px solid #6d5dfc;
    border-radius: 6px;
    padding: 8px;
}

/* Splitter */
QSplitter::handle {
    background-color: #3d3d3d;
}

QSplitter::handle:hover {
    background-color: #6d5dfc;
}

/* Dock Widget */
QDockWidget {
    background-color: #2d2d2d;
    color: #e0e0e0;
    titlebar-close-icon: url(:/icons/close.png);
    titlebar-normal-icon: url(:/icons/undock.png);
}

QDockWidget::title {
    background-color: #2d2d2d;
    padding: 8px;
    border-bottom: 1px solid #3d3d3d;
}

/* Card Container (custom widget) */
QFrame[class="card"] {
    background-color: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 12px;
    padding: 20px;
    margin: 8px;
}

QFrame[class="card"]:hover {
    border-color: #6d5dfc;
    background-color: #323232;
}

/* Section Container */
QFrame[class="section"] {
    background-color: transparent;
    border: none;
    padding: 16px 0px;
}

/* Divider */
QFrame[class="divider"] {
    background-color: #3d3d3d;
    max-height: 1px;
    border: none;
    margin: 16px 0px;
}
